import sys , time

def collatz(number):
    if number == 1:
        return number
    if (number % 2) == 0:
        return number // 2
    elif (number % 2) == 1:
        return number * 3 + 1

print('Enter a number:')
number = int(input())
print('Collatz Sequence:')

while (number != 1):
    number = collatz(number)
    print(number)